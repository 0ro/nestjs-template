datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
}

model User {
  id      Int      @id @default(autoincrement())
  posts   Post[]
  profile Profile?
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String
  published Boolean @default(true)
  authorId  Int
  author    User    @relation(fields: [authorId], references: [id])
}

model Profile {
  id        Int    @id @default(autoincrement())
  userId    Int    @unique
  user      User   @relation(fields: [userId], references: [id])
  firstName String
  lastName  String
  avatar    File?
}

model File {
  id        Int      @id @default(autoincrement())
  name      String
  path      String
  size      Int
  createdAt DateTime
  avatarId  Int?     @unique
  avatar    Profile? @relation(fields: [avatarId], references: [id])
}
